<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/id_login_push_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/loginBg"
              android:orientation="vertical">

    <TextView
        android:focusable="true"
        android:focusableInTouchMode="true"
        style="@style/loginTipsTheme"
        android:text="直播间信息"/>

    <LinearLayout style="@style/loginInfosLayoutTheme">

        <RelativeLayout style="@style/loginLineLayoutTheme">

            <TextView
                style="@style/loginLineTextViewTheme"
                android:text="CC账号ID"/>

            <com.bokecc.dwlivedemo_new.view.LoginLineLayout
                android:id="@+id/lll_login_push_uid"
                style="@style/loginLayoutTheme" />

            <View style="@style/loginLineBottomViewTheme"/>

        </RelativeLayout>

        <RelativeLayout style="@style/loginLineLayoutTheme">

            <TextView
                style="@style/loginLineTextViewTheme"
                android:text="直播间ID"/>

            <com.bokecc.dwlivedemo_new.view.LoginLineLayout
                android:id="@+id/lll_login_push_roomid"
                style="@style/loginLayoutTheme" />

            <View style="@style/loginLineBottomViewTheme"/>

        </RelativeLayout>

        <RelativeLayout style="@style/loginLineLayoutTheme">

            <TextView
                style="@style/loginLineTextViewTheme"
                android:text="昵称"/>

            <com.bokecc.dwlivedemo_new.view.LoginLineLayout
                android:id="@+id/lll_login_push_name"
                style="@style/loginLayoutTheme" />

            <View style="@style/loginLineBottomViewTheme"/>

        </RelativeLayout>

        <RelativeLayout style="@style/loginLineLayoutTheme">

            <TextView
                style="@style/loginLineTextViewTheme"
                android:text="密码"/>

            <com.bokecc.dwlivedemo_new.view.LoginLineLayout
                android:id="@+id/lll_login_push_password"
                style="@style/loginLayoutTheme" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_push"
        style="@style/loginButtonTheme"
        android:text="登录"/>
</LinearLayout>