<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top_layout"
    android:background="#B0000000"
    android:layout_width="match_parent"
    android:layout_height="42dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_phone_live_close"
            android:src="@mipmap/title_back"
            android:paddingRight="5dp"
            style="@style/phoneLiveLandscapeTitleViewTheme" />

        <TextView
            android:id="@+id/tv_phone_live_title"
            android:paddingLeft="0dp"
            android:text="直播间标题"
            style="@style/phoneLiveLandscapeTitleViewTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_phone_live_user_count"
            android:drawableLeft="@mipmap/video_dis_people"
            android:drawablePadding="2dp"
            android:text="0"
            style="@style/phoneLiveLandscapeTitleViewTheme"
            android:textSize="11sp"
            android:textColor="#B0FFFFFF"
            />

        <TextView
            android:id="@+id/tv_phone_definition"
            android:text="清晰度"
            style="@style/phoneLiveLandscapeTitleViewTheme" />

        <RelativeLayout
            android:layout_marginRight="5dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="公告"
                android:paddingRight="0dp"
                android:id="@+id/tv_phone_live_announce"
                style="@style/phoneLiveLandscapeTitleViewTheme" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv_announce_new"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/tv_phone_live_announce"
                android:src="@mipmap/notice_msg_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>