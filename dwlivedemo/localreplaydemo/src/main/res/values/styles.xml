<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>










    <style name="ActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/activity_start_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_start_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_finish_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_finish_exit</item>
    </style>

    <style name="TopTipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_top_tip_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/activity_top_tip_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/activity_top_tip_margin_start</item>
        <item name="android:textSize">@dimen/activity_top_tip_size</item>
        <item name="android:textColor">@color/colorTopTip</item>
    </style>

    <style name="ItemSimpleBgStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:background">@color/colorItemNormal</item>
    </style>

    <style name="ItemSimpleTipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">@dimen/item_margin_start</item>
        <item name="android:textSize">@dimen/item_tip_size</item>
        <item name="android:textColor">@color/colorItemTip</item>
    </style>

    <style name="ItemSimpleIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/item_margin_end</item>
    </style>


    <style name="HeadIconStyle">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:src">@drawable/chatuser_head_icon</item>
        <item name="hv_border_color">#fff</item>
        <item name="hv_border_width">1dp</item>
        <item name="hv_shadow_color">#cccccc</item>
        <item name="hv_shadow_width">2dp</item>
    </style>

    <style name="baseTitleImageTheme">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="phoneLiveLandscapeTitleViewTheme" parent="baseTitleImageTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/pc_live_top_title</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="userCountTextViewTheme">
        <item name="android:drawablePadding">2dp</item>
        <item name="android:drawableLeft">@mipmap/portrait_people</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#80666666</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="liveRadioButtonTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/pc_live_infos_tag</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/portrait_tag_bg</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="rtcTextViewTipsTheme">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#666666</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="rtcLinearLayoutTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">158dp</item>
        <item name="android:layout_height">101dp</item>
    </style>

    <style name="qs_single_select_theme">
        <item name="android:background">@drawable/qs_single_select_bg</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#FF643d</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="qs_single_select_sign_theme">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/qs_choose_label</item>
    </style>

    <style name="qs_single_select_layout_theme">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
    </style>

</resources>
